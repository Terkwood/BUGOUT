{
  "variables": {
    "aws_access_key": "{{env `AWS_ACCESS_KEY_ID`}}",
    "aws_secret_key": "{{env `AWS_SECRET_ACCESS_KEY`}}",
    "vpc_id": "{{env `VPC_ID`}}",
    "subnet_id": "{{env `SUBNET_ID`}}",
    "user_data_file": "{{env `USER_DATA_FILE`}}",
    "dotenv_src": "{{env `DOTENV_SRC`}}",
    "region": "us-east-1"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "ami_name": "fcos-bugout-{{timestamp}}",
      "instance_type": "t3.xlarge",
      "region": "{{user `region`}}",
      "vpc_id": "{{user `vpc_id`}}",
      "subnet_id": "{{user `subnet_id`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "user_data_file": "{{user `user_data_file`}}",
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "name": "fedora-coreos-31.20200420.3.0",
          "root-device-type": "ebs"
        },
        "owners": ["125523088429"],
        "most_recent": true
      },
      "ssh_username": "core",
      "launch_block_device_mappings": [
        {
          "device_name": "/dev/xvda",
          "volume_size": 16,
          "volume_type": "gp2",
          "delete_on_termination": true
        }
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": ["git clone https://github.com/Terkwood/BUGOUT.git"]
    },
    {
      "type": "file",
      "destination": "/home/core/BUGOUT/gateway/",
      "source": "{{user `dotenv_src`}}/gateway/.env"
    },
    {
      "type": "file",
      "destination": "/home/core/BUGOUT/bugle/",
      "source": "{{user `dotenv_src`}}/bugle/.env"
    },
    {
      "type": "file",
      "destination": "/home/core/BUGOUT/botlink/",
      "source": "{{user `dotenv_src`}}/botlink/.env"
    },
    {
      "type": "shell",
      "inline": [
        "sudo systemctl stop rpm-ostreed",
        "sudo rpm-ostree upgrade",
        "sudo rpm-ostree install htop",
        "sudo rpm-ostree install tmux"
      ]
    },
    {
      "type": "shell",
      "inline": ["cd /home/core/BUGOUT", "sh build-tiny-dc-fcos.sh"]
    }
  ]
}
